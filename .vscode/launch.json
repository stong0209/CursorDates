    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TS (tsx CLI)",
            "runtimeExecutable": "node",
            "program": "${workspaceFolder}/node_modules/tsx/dist/cli.mjs",
            "args": [
                "${workspaceFolder}/src/index.ts",
                "C:\\dev\\2009",
                "C:\\dev\\2009-log.txt"
            ],
            "cwd": "${workspaceFolder}",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program (built JS)",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": [
                "C:\\dev\\2009",
                "C:\\dev\\2009-log.txt"
            ]
        }
    ]
}